<!doctype html>
<html lang="en">

  <head>
    <meta charset='utf-8'/>
    <title>{{appData.title}} | Rendr Example App</title>
    {{#if appData.og}}
    <meta property="og:title" content="{{appData.og.title}}" />
    <meta property="og:type" content="product" />
    <meta property="og:url" content="/products/{{appData.og.name}}" />
    {{/if}}
    <link href="/styles.css" media="screen" rel="stylesheet" type="text/css" />
  </head>

  <body class="">
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
          <div class="navbar-header">
            <a class="navbar-brand" href="/">Beetpress</a>
          </div>
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="/products">Products</a></li>
            {{#if user}}
            <li><a href="#">{{user.name}}</a></li>
            {{else}}
            <li><a href="/auth/facebook">Login with Facebook</a></li>
            {{/if}}
          </ul>
          <div class="loading-indicator">Loading&hellip;</div>
        </div>

    </div>

    <section id="content" class="container">
      {{{body}}}
    </section>
    <script src="/mergedAssets.js"></script>
    <script>
    (function() {
      var App = window.App = new (require('app/app'))({{json appData}});
      App.bootstrapData({{json bootstrappedData}});
      App.start();
    })();
    </script>

  </body>

</html>
