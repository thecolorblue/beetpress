<!doctype html>
<html lang="en">

  <head>
    <meta charset='utf-8'/>
    <title>{{appData.title}} | BeetPress</title>
    {{#if appData.og}}
    <meta property="og:title" content="{{appData.og.title}}" />
    <meta property="og:type" content="product" />
    <meta property="og:url" content="/products/{{appData.og.name}}" />
    {{/if}}
    <link href="/css/styles.css" media="screen" rel="stylesheet" type="text/css" />
    <link href="/styles.css" media="screen" rel="stylesheet" type="text/css" />
  </head>

  <body class="">
    {{setUser user}}
    <header class="navbar navbar-bright navbar-fixed-top" role="banner">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Beetpress</a>
        </div>
        <ul class="nav navbar-nav">
          <li><a href="/products">Products</a></li>
          {{#user}}
          <li><a href="#">{{user.name}}</a></li>
          <li><a href="/auth/logout">logout</a></li>
          {{/user}}
          {{#anonymous}}
          <li><a href="/auth/facebook">Login with Facebook</a></li>
          {{/anonymous}}
          {{#admin}}
          <li><a href="#">Admin</a></li>
          {{/admin}}
        </ul>
        <div class="loading-indicator">Loading&hellip;</div>
      </div>
    </header>

    <section id="content" class="container">
      {{{body}}}
    </section>

    {{#admin}}
    <section>
      <pre>{{jsonUser}}</pre>
    </section>
    {{/admin}}
    <script src="/mergedAssets.js"></script>
    <script>
    (function() {
      var App = window.App = new (require('app/app'))({{json appData}});
      window.User = ({{json user}});
      App.bootstrapData({{json bootstrappedData}});
      App.start();
    })();
    </script>

  </body>

</html>
