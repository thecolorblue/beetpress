<a href="/{{producer.username}}/{{name}}"
  class="list-group-item col-md-4 col-xs-12">
  <div class="row">    
    <br>

    <div class="col-md-10 col-sm-9">
      <h3>{{title}}</h3>
      <div class="row">
        <div class="col-xs-9">
          <small
            style="font-family:courier,'new courier';"
            class="text-muted">
            created: {{date}}
          </small>
        </div>
        <div class="col-xs-3"></div>
      </div>
    </div>
    {{#owner this}}
    <span class="badge">
    	<button class="remove">x</button>
    </span>
    {{/owner}}
  </div>
  <hr>
</a>
